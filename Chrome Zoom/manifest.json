{
  "manifest_version": 3,
  "name": "Resolution-Based Zoom",
  "version": "1.0",
  "description": "Automatically adjust Chrome's zoom level based on screen resolution.",
  "permissions": [ "tabs", "scripting", "storage" ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [ "<all_urls>" ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
